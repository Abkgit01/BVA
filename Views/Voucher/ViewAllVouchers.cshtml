@model ViewAllVouchersModel
@inject SignInManager<ApplicationUser> signInManager;
@{

    ViewBag.Title = "VIew all vouchers";
}


<div class="">

    @*<div class="row" id="BackImage">

            <br />
            <h3 class="DashCompanyName"> My Application List </h3>
            <hr />
        </div>*@
    <br />
    <h4 style="text-align:center; color: #092f89;">All Vouchers</h4>

    <div class="" id="MyAppsTableData">
        <form method="post">
            <div class="form-group form-inline">
                <label for="MinimumDate">Minimum Date : </label>
                <input asp-for="MinimumDate" value="" placeholder="Minimum Date" style="width:350px" class="form-control input-sm" />
            </div>
            <div class="form-group form-inline">
                <label for="NaximumDate">Maximum Date : </label>
                <input asp-for="MaximumDate" value="" placeholder="Maximum Date" style="width:350px" class="form-control input-sm" />
            </div>
            @*<button type="submit" class="btn btn-primary">Search Date</button>*@
            <input type="submit" value="Search By Date" formaction=@Url.Action("SearchByDate") formmethod="post" class="btn btn-primary" />
            <br />
        </form>
        <br />
        <table class="table table-bordered table-hover" id="MyAppsTable" style="font-size:small">
            <thead>
                <tr>
                    <th> Ref-No.</th>
                    <th> Current Level</th>
                    <th> Description </th>
                    <th> Amount </th>
                    <th> Status </th>
                    <th> Date Created </th>
                    <th> Voucher </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var a in Model.vouchers)
                {

                    var VoucherId = @a.Id.ToString("D3");

                <tr>

                    @if (a.VoucherType == VoucherType.Payment)
                    {
                        <td class="text-danger"> <b>PAY@{@VoucherId}</b> </td>
                    }
                    else
                    {
                        <td class="text-danger"> <b>REC@{@VoucherId}</b> </td>
                    }
                    @if (a.IsActive == true)
                    {
                        <td> Approved</td>
                    }
                    else
                    {
                        <td> @a.CurrentLevelRoleName</td>
                    }


                    <td><small>@a.Description</small> </td>
                    @if (a.Currency == Currency.USD)
                    {
                        <td>&#36;@String.Format("{0:n}", @a.TotalAmount)</td>
                    }
                    else
                    {
                        <td>&#8358;@String.Format("{0:n}", @a.TotalAmount)</td>
                    }
                    @{
                        if (a.IsActive == true)
                        {
                            <td> <span class="btn btn-success btn-sm"> Approved </span> </td>
                        }
                        else
                        {
                            <td> <span class="btn btn-warning btn-sm"> Processing </span> </td>
                        }
                    }
                    <td> @a.DateCreated</td>
                    <td>
                        @if (signInManager.IsSignedIn(User) && (User.IsInRole("ChiefAccountant") || User.IsInRole("AccountOfficer")))
                        {
                            <div class="" role="group">
                                @if (a.IsActive == true)
                                {
                                    <a href="/voucher/viewvoucher/@VoucherId" class="btn btn-sm btn-primary"> <i class="fa fa-eye"> </i> View </a>
                                }
                                else if ((a.CurrentLevelRoleName == "AccountOfficer") || (a.CurrentLevelRoleName == "ChiefAccountant") || (a.CurrentLevelRoleName == "Approval") || (a.CurrentLevelRoleName == "Authorizer1"))
                                {
                                    <a href="/voucher/voucheraction/@VoucherId" class="btn btn-sm btn-primary"> <i class="fa fa-eye"> </i> View </a>

                                }
                                else
                                {
                                    <a href="/voucher/voucheraction/@VoucherId" class="btn btn-sm btn-primary"> <i class="fa fa-eye"> </i> View </a>
                                }

                                <p></p>

                            </div>
                        }
                        else
                        {
                            <div class="" role="group">
                                @if (a.IsActive == true)
                                {
                                    <a href="/voucher/viewvoucher/@VoucherId" class="btn btn-sm btn-primary"> <i class="fa fa-eye"> </i> View </a>
                                }
                                else
                                {
                                    <a href="/voucher/voucheraction/@VoucherId" class="btn btn-sm btn-primary"> <i class="fa fa-eye"> </i> View</a>
                                }

                                <p></p>

                            </div>
                        }


                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>

</div>
