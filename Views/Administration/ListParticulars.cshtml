@model CreateParticularViewModel

@{
    ViewBag.Title = "Particulars";
}
<div class="row">
    <div class="col-md-9 register-right">
        <form asp-action="CreateParticular" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group row">
                <label asp-for="ParticularName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ParticularName" class="form-control" placeholder="Name">
                    <span asp-validation-for="ParticularName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="width:auto">
                        Create Particular
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
